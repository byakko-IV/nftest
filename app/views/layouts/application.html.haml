!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8',
    'http-equiv' => 'Content-Type' }/
    %title Nftest
    = csrf_meta_tags
    = action_cable_meta_tag
    = stylesheet_link_tag    'application', media: 'all',
      'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      %a.navbar-brand{ href: '#' } Test
      %button.navbar-toggler{ 'aria-controls' => 'navbarSupportedContent',
        'aria-expanded' => 'false', 'aria-label' => 'Toggle navigation',
        'data-target' => '#navbarSupportedContent',
        'data-toggle' => 'collapse', :type => 'button' }
        %span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarSupportedContent
        %ul.navbar-nav.mr-auto
          %li.nav-item
            = link_to 'Facturas', bills_path, class: 'nav-link'
    .col-12
      = yield
    - flash.each do |key, value|
      .alert.alert-dismissible.col-md-3#alert{ role: 'alert',
        class: "alert-#{key}" }
        %button.close{ 'aria-label' => 'Close', 'data-dismiss' => 'alert',
          type: 'button' }
          %span{ 'aria-hidden' => 'true' } Ã—
        %strong
          = key
        %p= value
